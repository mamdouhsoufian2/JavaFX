<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.xmlvalidator.Controller">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Validateur XML Multi-Schémas" textFill="#2c3e50">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <VBox spacing="5.0">
        <Label text="1. Document XML à valider :" style="-fx-font-weight: bold;"/>
        <HBox spacing="10.0">
            <TextField fx:id="xmlPathField" editable="false" promptText="Aucun fichier sélectionné" HBox.hgrow="ALWAYS" />
            <Button onAction="#handleSelectXml" text="Parcourir..." />
        </HBox>
    </VBox>

    <VBox spacing="5.0" VBox.vgrow="ALWAYS">
        <Label text="2. Schémas XSD (Principal et dépendances) :" style="-fx-font-weight: bold;"/>
        <HBox spacing="10.0">
            <Button onAction="#handleAddXsd" text="+ Ajouter un schéma" style="-fx-base: #e8f5e9;"/>
            <Button onAction="#handleRemoveXsd" text="- Retirer la sélection" style="-fx-base: #ffebee;"/>
        </HBox>

        <TableView fx:id="xsdTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="xsdNameColumn" prefWidth="200.0" text="Nom du fichier" />
                <TableColumn fx:id="xsdPathColumn" prefWidth="500.0" text="Chemin complet" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="15.0">
        <Button onAction="#handleExport" text="Exporter le rapport" />
        <Button onAction="#handleValidate" text="VALIDER LE XML" textFill="WHITE" style="-fx-background-color: #1976D2; -fx-font-weight: bold; -fx-padding: 10 20 10 20;"/>
    </HBox>

    <VBox spacing="5.0">
        <Label text="Résultats de la validation :" style="-fx-font-weight: bold;"/>
        <TextArea fx:id="resultArea" editable="false" prefHeight="150.0" wrapText="true" style="-fx-font-family: 'Consolas', monospace;"/>
    </VBox>

</VBox>